<div id="filterrific_results">
  <div class="col-md-10">

    <%= will_paginate loans %>

    <table class="table table-striped">
      <tr>
        <th>Investment</th>
        <th>Rate</th>
        <th>Term</th>
        <th>FICO</th>
        <th>Amount</th>
        <th>% Funded</th>
        <th>Amount Left</th>
        <th>Days Left</th>
      </tr>
      <% loans.each do |loan| %>
        <tr>
          <%= form_for :investment, method: :post, url: investments_path do |f|%>
          <td>
            <%= f.number_field :amount, class: 'input-investment form-control', placeholder: '$' %><br/><br>
            <%= f.hidden_field :loan_id, class: 'input-investment', value: loan.id %>
            <%= f.submit "Add", class: 'btn btn-success add-investment' %>
          </td>
          <% end %>
          <td><%= loan.rate %>%</td>
          <td><%= loan.term %></td>
          <td><%= Lendee.find_by(loan.lendee_id).credit_range %></td>
          <td>$<%= "%.2f" % loan.amount %></td>
          <td>

            <div class="progress">
              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow= "<%= loan.amount_funded %>" aria-valuemin="0" aria-valuemax="<%= loan.amount %>" style="width: <%= (loan.amount_funded/loan.amount)*100 %>%">
                <%= (loan.amount_funded/loan.amount).round(2)*100 %>%
              </div>
            </div>


          </td>
          <td>$<%= "%.2f" % (loan.amount - loan.amount_funded) %></td>
          <td>
            <%= (loan.expiration_date - Date.today).to_i %> days<br/>
            <!-- Button trigger modal -->
            <button class="btn btn-default estimate-returns" data-toggle="modal" data-target="#myModal">
              Estimate Returns
            </button>
          </td>

          <!-- Modal -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <h4 class="modal-title">See how much you can make</h4>
                </div>
                <div class="modal-body">
                  <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div>
        </tr>
      <% end %>
    </table>

    <%= will_paginate loans %>
  </div>
</div>
