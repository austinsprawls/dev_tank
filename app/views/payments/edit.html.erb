
<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <h2>Make Payment</h2>

      <%= form_for :payment, method: :put, url: lendee_payment_path(current_lendee.id, params[:id]) do |f| %>
        <%= f.label :amount_paid, "How much do you want to pay today?" %>
        <%= f.text_field :amount_paid, value: @payment.amount, class: 'form-control' %><br/>
        <%= f.submit "Pay now", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
