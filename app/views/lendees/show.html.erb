<style>
  .amount-funded{
    color: green;
  }
</style>

<%= render 'shared/navbar' %>

<div class="profile-panel">
  <h1>Hi There, <%= @lendee.first_name %>!</h1>
</div>

<div class="container">
  <% if @loan %>
  <div class="row">
    <div class="col-md-3">

      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title">Amount Funded</h2>
        </div>
        <div class="panel-body">
          <h3 class="amount-funded">$<%= @amount_funded %></h3>
          <p>(<%= @amount_funded / @amount_requested %>% funded)</p>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Amount Remaining</h2>
        </div>
        <div class="panel-body">
          <h3>$<%= @amount_requested - @amount_funded %></h3>
        </div>
      </div>

    </div>
    <div class="col-md-9">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h2 class="panel-title">Investor Activity</h2>
        </div>
        <div class="panel-body">
          <table class="table table-striped">
          <% @investments.each do |investment| %>
              <tr>
                <td><%= investment.created_at.strftime('%d %b') %></td>
                <td>+ $<%= investment.amount %></td>
              </tr>
          <% end %>
        </table>
        <%= link_to "View all investments", "#" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
