<style>
  .amount-funded{
    color: green;
  }
</style>

<%= render 'shared/navbar' %>

<div class="profile-panel">
  <h1>Hi There, <%= @lender.email %>!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">

      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title">Total Invested</h2>
        </div>
        <div class="panel-body">
          <% if @total_invested > 0 %>
          <h3 class="total-invested">$<%= @total_invested %></h3>
          <% end %>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Total Returns</h2>
        </div>
        <div class="panel-body">
          <% if @total_returns %>
          <h3>$<%= @total_returns %></h3>
          <% end %>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Expected Returns</h2>
        </div>
        <div class="panel-body">
          <% if @expected_returns%>
          <h3>$<%= @expected_returns.round(2) %></h3>
          <% end %>
        </div>
      </div>

    </div>
    <div class="col-md-9">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h2 class="panel-title">Investment Activity</h2>
        </div>
        <div class="panel-body">
          <table class="table table-striped">
            <tr>
              <td>Date</td>
              <td>Amount</td>
            </tr>
          <% @lender_investments.each do |investment| %>
              <tr>
                <td><%= investment.created_at.strftime('%d %b') %></td>
                <td>+ $<%= investment.amount %></td>
              </tr>
          <% end %>
        </table>
        <%= link_to "View all investments", "#" %>
        </div>
      </div>
    </div>
  </div>
</div>
